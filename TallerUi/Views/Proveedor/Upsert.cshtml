@using Taller.Domain.EntityModels;
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@model Proveedor
@{
    ViewData["Title"] = "Registrar proveedor";
} <h1>Proveedores</h1>
<div class="row">
    <div class="col-md-10">
        <form asp-action="Upsert" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProveedorId" class="form-control" />

            <div class="form-group row">
                <div class="form-group col-md-6">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" placeholder="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Direccion" class="control-label"></label>
                    <input asp-for="Direccion" placeholder="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
            </div>
            </br>

            <div class="form-group row">
                <div class="form-group col-md-6">
                    <label asp-for="Telefono" class="control-label"></label>
                    <input asp-for="Telefono" placeholder="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="CorreoElectronico" class="control-label"></label>
                    <input asp-for="CorreoElectronico" placeholder="Correo Electronico" class="form-control" />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>
            </div>
            </br>

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i>Guardar</button>
                <button type="button" class="btn btn-outline-danger" onclick="return Cancelar();">
                    <i class="fa-solid fa-ban"></i>Cancelar
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function Cancelar() {
        swal({
            title: "Registrar Proveedor",
            text: "Esta seguro de cancelar?",
            icon: "Warning",
            buttons: : true,
            dangerMode: true
        }).then(
            (cancelar) => {
                if (cancelar) {
                    location.href = '/Index'
                }
            }
        )
    }
</script>