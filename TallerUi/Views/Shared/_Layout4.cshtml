@model Register
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link rel="stylesheet" href="~/css/style2.css">
<!-- Include the above in your HEAD tag -->

<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
<div class="main">
    @RenderBody()

    <div class="container">
        <center>
            <div class="middle">
                <div>
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div action="col-md-6">
                            
                            <input type="email" id="email" asp-for="Email" class="form-control" placeholder="Email"/>
                            <span asp-validation-for="Email"></span>
                        </div> <br />
                        <div action="col-md-6">
                           
                            <input type="password" id="password" asp-for="Password" class="form-control" placeholder="Contraseña" />
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div action="col-md-6">
                            
                            <input type="password" id="confirmPassword" asp-for="ConfirmPassword" class="form-control" placeholder="Confirmar Contraseña" />
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary">Registrarse</button>
                        </div>
                    </form>
                </div>
                <div class="logo">
                     <img src="/images/logo.png" alt="#" />

                    <div class="clearfix"></div>
                </div>

            </div>
        </center>
    </div>

</div>